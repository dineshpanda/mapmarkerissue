<% if @address.present? %>
  <% if @address.errors.any? %>
    <% @address.errors.full_messages.each do |message| %>
      <div class="alert alert-danger">
        <%= message %>
      </div>
    <% end %>
  <% end %>
<% end %>

<h1>
  Add a new address
</h1>


<hr>

<form action="/create_address" method="post">

  <div class="form-group">
    <label for="employee_id">
      Employee
    </label>

    <%= select_tag(:employee_id, options_from_collection_for_select(Employee.all, :id, :name, @address.employee_id), :class => "form-control") %>
  </div>

  <div class="form-group">
    <label for="office_addr">
      Office addr
    </label>

    <input type="text" id="office_addr" name="office_addr" class="form-control" value="<%= @address.office_addr %>">
  </div>

  <button class="btn btn-block btn-outline-secondary">
    Create address
  </button>
</form>

<hr>

<a href="/addresses">
  Go back
</a>
