<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h1>
      Address #<%= @address.id %> details
    </h1>

    <div class="row mb-3">
      <div class="col">
        <a href="/addresses" class="btn btn-block btn-outline-secondary">
          Go back
        </a>
      </div>

      <!-- Edit link address start -->
      <div class="col">
        <a href="/addresses/<%= @address.id %>/edit" class="btn btn-block btn-outline-secondary">
          Edit address
        </a>
      </div>
      <!-- Edit link address end -->

      <!-- Delete link address start -->
      <div class="col">
        <a href="/delete_address/<%= @address.id %>" class="btn btn-block btn-outline-secondary">
          Delete address
        </a>
      </div>
      <!-- Delete link address end -->
    </div>

    <dl>
      <dt>
        Employee
      </dt>
      <!-- Display employee_id start -->
      <dd>
        <%= @address.employee_id %>
      </dd>
      <!-- Display employee_id end -->

      <dt>
        Office addr
      </dt>
      <!-- Display office_addr start -->
      <dd>
        <%= @address.office_addr %>
      </dd>
      <!-- Display office_addr end -->

      <dt>
        Created at
      </dt>
      <!-- Display created_at start -->
      <dd>
        <%= time_ago_in_words(@address.created_at) %> ago
      </dd>
      <!-- Display created_at end -->

      <dt>
        Updated at
      </dt>
      <!-- Display updated_at start -->
      <dd>
        <%= time_ago_in_words(@address.updated_at) %> ago
      </dd>
      <!-- Display updated_at end -->
    </dl>
  </div>
</div>

<!-- Show Page Customization starts -->

<!-- Show Page Customization end -->
