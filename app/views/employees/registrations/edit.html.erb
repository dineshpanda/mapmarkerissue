<div class="row">
  <div class="offset-md-3 col-md-6">
    <div class="card mb-3">
      <h5 class="card-header">
        Edit <%= resource_name.to_s.titleize %>
      </h5>

      <div class="card-body">
        <% was_validated = resource.errors.any? %>
        <!-- Form html options start -->
        <% form_html_options = { method: :put, novalidate: true, class: "mb-3", multipart: true } %>
        <!-- Form html options end -->
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: form_html_options) do |f| %>

          <% if flash[:notice].present? %>
            <div class="alert alert-info" role="alert">
              <%= flash[:notice] %>
            </div>
          <% end %>

          <% if flash[:alert].present? %>
            <div class="alert alert-danger" role="alert">
              <%= flash[:alert] %>
            </div>
          <% end %>

          <div class="form-group">
            <% email_was_invalid = resource.errors.include?(:email) %>

            <% email_class = "form-control" %>

            <% if was_validated %>
              <% if email_was_invalid %>
                <% email_class << " is-invalid" %>
              <% else %>
                <% email_class << " is-valid" %>
              <% end %>
            <% end %>

            <%= f.label :email %>

            <%= f.email_field :email, autofocus: true, class: email_class %>

            <% if email_was_invalid %>
              <% resource.errors.full_messages_for(:email).each do |message| %>
                <div class="invalid-feedback d-flex">
                  <%= message %>
                </div>
              <% end %>
            <% end %>

            <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
              <small class="form-text text-muted">
                Currently awaiting confirmation for <%= resource.unconfirmed_email %>.
              </small>
            <% end %>
          </div>

          <div class="form-group">
            <% password_was_invalid = resource.errors.include?(:password) %>

            <% password_class = "form-control" %>

            <% if was_validated %>
              <% if password_was_invalid %>
                <% password_class << " is-invalid" %>
              <% else %>
                <% password_class << " is-valid" %>
              <% end %>
            <% end %>

            <%= f.label :password %>

            <%= f.password_field :password, class: password_class, autocomplete: "off" %>

            <% if password_was_invalid %>
              <% resource.errors.full_messages_for(:password).each do |message| %>
                <div class="invalid-feedback d-flex">
                  <%= message %>
                </div>
              <% end %>
            <% end %>

            <small class="form-text text-muted">
              Leave blank if you don't want to change it.

              <% if @minimum_password_length %>
                <%= @minimum_password_length %> characters minimum.
              <% end %>
            </small>
          </div>

          <div class="form-group">
            <% password_confirmation_was_invalid = resource.errors.include?(:password_confirmation) %>

            <% password_confirmation_class = "form-control" %>

            <% if was_validated %>
              <% if password_confirmation_was_invalid %>
                <% password_confirmation_class << " is-invalid" %>
              <% else %>
                <% password_confirmation_class << " is-valid" %>
              <% end %>
            <% end %>

            <%= f.label :password_confirmation %>

            <%= f.password_field :password_confirmation, class: password_confirmation_class, autocomplete: "off" %>

            <% if password_confirmation_was_invalid %>
              <% resource.errors.full_messages_for(:password_confirmation).each do |message| %>
                <div class="invalid-feedback d-flex">
                  <%= message %>
                </div>
              <% end %>
            <% end %>
          </div>

          <div class="form-group">
            <% current_password_was_invalid = resource.errors.include?(:current_password) %>

            <% current_password_class = "form-control" %>

            <% if was_validated %>
              <% if current_password_was_invalid %>
                <% current_password_class << " is-invalid" %>
              <% else %>
                <% current_password_class << " is-valid" %>
              <% end %>
            <% end %>

            <%= f.label :current_password %>

            <%= f.password_field :current_password, class: current_password_class, autocomplete: "off" %>

            <% if current_password_was_invalid %>
              <% resource.errors.full_messages_for(:current_password).each do |message| %>
                <div class="invalid-feedback d-flex">
                  <%= message %>
                </div>
              <% end %>
            <% end %>

            <small class="form-text text-muted">
              We need your current password to confirm your changes.
            </small>
          </div>


          <!-- Devise Input for name start -->
          <div class="form-group">
            <% name_was_invalid = resource.errors.include?(:name) %>

            <% name_class = "form-control" %>

            <% if was_validated %>
              <% if name_was_invalid %>
                <% name_class << " is-invalid" %>
              <% else %>
                <% name_class << " is-valid" %>
              <% end %>
            <% end %>

            <%= f.label :name %>

            <%= f.text_field :name, :class => name_class, :placeholder => "Enter name" %>

            <% if name_was_invalid %>
              <% resource.errors.full_messages_for(:name).each do |message| %>
                <div class="invalid-feedback d-flex">
                  <%= message %>
                </div>
              <% end %>
            <% end %>
          </div>
          <!-- Devise Input for name end -->

          <!-- Devise Input for emp_id start -->
          <div class="form-group">
            <% emp_id_was_invalid = resource.errors.include?(:emp_id) %>

            <% emp_id_class = "form-control" %>

            <% if was_validated %>
              <% if emp_id_was_invalid %>
                <% emp_id_class << " is-invalid" %>
              <% else %>
                <% emp_id_class << " is-valid" %>
              <% end %>
            <% end %>

            <%= f.label :emp_id %>

            <%= f.number_field :emp_id, :class => emp_id_class, :placeholder => "Enter emp id" %>

            <% if emp_id_was_invalid %>
              <% resource.errors.full_messages_for(:emp_id).each do |message| %>
                <div class="invalid-feedback d-flex">
                  <%= message %>
                </div>
              <% end %>
            <% end %>
          </div>
          <!-- Devise Input for emp_id end -->

          <!-- Devise Input for emp_type start -->
          <div class="form-group">
            <% emp_type_was_invalid = resource.errors.include?(:emp_type) %>

            <% emp_type_class = "form-control" %>

            <% if was_validated %>
              <% if emp_type_was_invalid %>
                <% emp_type_class << " is-invalid" %>
              <% else %>
                <% emp_type_class << " is-valid" %>
              <% end %>
            <% end %>

            <%= f.label :emp_type %>

            <%= f.text_field :emp_type, :class => emp_type_class, :placeholder => "Enter emp type" %>

            <% if emp_type_was_invalid %>
              <% resource.errors.full_messages_for(:emp_type).each do |message| %>
                <div class="invalid-feedback d-flex">
                  <%= message %>
                </div>
              <% end %>
            <% end %>
          </div>
          <!-- Devise Input for emp_type end -->

          <!-- Devise Input for photo start -->
          <div class="form-group">
            <% photo_was_invalid = resource.errors.include?(:photo) %>

            <% photo_class = "form-control" %>

            <% if was_validated %>
              <% if photo_was_invalid %>
                <% photo_class << " is-invalid" %>
              <% else %>
                <% photo_class << " is-valid" %>
              <% end %>
            <% end %>

            <%= f.label :photo %>

            <%= f.file_field :photo, :class => photo_class %>

            <% if photo_was_invalid %>
              <% resource.errors.full_messages_for(:photo).each do |message| %>
                <div class="invalid-feedback">
                  <%= message %>
                </div>
              <% end %>
            <% end %>
          </div>
          <!-- Devise Input for photo end -->
          <%= f.submit "Update", class: "btn btn-block btn-outline-primary" %>
        <% end %>

        <%= link_to "Back", :back, class: "btn btn-block btn-outline-secondary" %>
      </div>

      <div class="card-footer">
        <%= link_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, class: "btn btn-block btn-link", method: :delete %>
      </div>
    </div>
  </div>
</div>
